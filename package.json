{
  "name": "silmarillion-api",
  "version": "1.0.0",
  "description": "A REST API to serve information about characters in the Silmarillion.",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "test": "mocha --reporter nyan tests/**/*.test.js",
    "test:watch": "mocha --reporter min --watch tests/**/*.test.js",
    "dev": "nodemon --exec babel-node src/server.js",
    "build": "babel src --out-dir dist"
  },
  "author": "SavagePixie",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "fluture": "^12.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.10.3",
    "@babel/plugin-proposal-pipeline-operator": "^7.10.1",
    "@babel/preset-env": "^7.10.3",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.3.1",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4"
  }
}
